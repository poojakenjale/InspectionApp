<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inspection.AuditCreation"
             Title="AuditCreation"
             BackgroundImage="background.jpg">
    <StackLayout Orientation="Vertical" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand">
        <StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand">
            <Label x:Name="lblTemplate" Text="Select Template" WidthRequest="180" Margin="5,50,0,0"></Label>
            <Picker x:Name="ddlTemplate" WidthRequest="270"></Picker>
        </StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand">
            <Label x:Name="lblLocation" Text="Select Location" WidthRequest="180" Margin="5,10,0,0"></Label>
            <Entry x:Name="txtLocation" WidthRequest="270" ></Entry>
        </StackLayout>
        <Button x:Name="btnNext" Clicked="OnNextClick" Text="Next" Margin="270,0,0,0"></Button>
    </StackLayout>
</ContentPage>